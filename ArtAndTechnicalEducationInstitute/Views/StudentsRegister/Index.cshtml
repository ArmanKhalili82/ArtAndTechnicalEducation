@model List<StudentsRegister>
@* <partial name="_Notification" /> *@
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Studnts List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="StudentsRegister" asp-action="Register" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Student
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Img</th>
                <th>Student Code</th>
                <th>Name</th>
                <th>Family</th>
                <th>National ID</th>
                <th>Age</th>
                <th>Register Cource</th>
                <th>Fee</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
               <tr>
                    <td>@obj.Img</td>
                    <td>@obj.StudentCode</td>
                    <td>@obj.Name</td>
                    <td>@obj.Family</td>
                    <td>@obj.NationalCard</td>
                    <td>@obj.Age</td>
                    <td>@obj.RegisterCource</td>
                    <td>@obj.Fee</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="StudentsRegister" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="StudentsRegister" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
               </tr> 
            }
        </tbody>
    </table>
</div>